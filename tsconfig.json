{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "lib": ["ESNext"],
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["src/*"],
      "@factories/*": ["src/factories/*"],
      "@library/*": ["src/library/*"],
      "@report/*": ["src/report/*"]
    }
  },
  "include": [ "./src","**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules","dist"],
}
